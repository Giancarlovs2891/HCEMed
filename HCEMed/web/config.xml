<?xml version="1.0" encoding="UTF-8" ?>
<widget
    xmlns     = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id= "com.saludtec.medsio"
    versionCode="1.0" 
    version= "1.0.0"> 
    
    <!-- Nobre de la aplicacion -->  
    <name>Medsio</name>
    
    <!-- Descipcion de la aplicacion -->
    <description>
        Aplicacion para manejo de historias clinicas
    </description>
    
    <!-- Autor de la aplicacion -->
    <author href="https://saintec.co" email="info@saintec.co">
        Saludtec 
    </author>
    
    <!-- Caracteristica -->
    <feature name="http://api.phonegap.com/1.0/device" />

    <!-- Preferencias -->
    <preference name="phonegap-version" value="3.3.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="deployment-target" value="6.0" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    
    <!-- Iconos -->
    <!-- iPad -->
    <icon src="img/ipadlogo57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/ipadlogo72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/ipadlogo114.png" gap:platform="ios" width="114" height="114" />
    <!-- retina iPad support: PhoneGap 2.5.0+ only -->
    <icon src="img/ipadlogo144.png" gap:platform="ios" width="144" height="144" />

    <!-- Splash screen -->
    <!-- iPhone & iPod touch -->
    <gap:splash src="img/splash-iphone-1.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash-ihpone-2.png" gap:platform="ios" width="640" height="960" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="img/splash-iphone5.png" gap:platform="ios" width="640" height="1136" />
    <!-- iPad -->
    <gap:splash src="img/splash-portrait-ipad.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="img/splash-landscape-ipad.png" gap:platform="ios" width="1024" height="768" />
    <!-- retina iPad support: PhoneGap 2.5.0+ only -->
    <gap:splash src="img/splash-portrait-retina-ipad.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="img/splash-landscape-retina-ipad.png" gap:platform="ios" width="2048" height="1536" />

</widget>
